@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Project_PRN211.Models.Account

@{
    ViewData["Title"] = "DangKyTaiKhoan";
}



<h1>Register</h1>

<h4>Fill in the account and password you want to register</h4>
<h5> @Html.ValidationMessage("ErrorResister")</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DangKyTaiKhoan" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <input asp-for="User" class="form-control" required />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label"></label>
                <input type="password" asp-for="Pass" class="form-control" required />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="IsAdmin" value="0" />
            <input type="hidden" asp-for="IsSell" value="0" />
            <div class="form-group">
                <h7>RePassword</h7>
                <input type="password" name="Repass" class="form-control" required />
                
            </div>
            <div class="form-group">
                <label asp-for="Gmail" class="control-label"></label>
                <input type="email" asp-for="Gmail" class="form-control" required />
                <span asp-validation-for="Gmail" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


